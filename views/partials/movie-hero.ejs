<% if (moviedata == null) { %>
    <div class="movie-overall">
        <div class="poster">
            <img src="/icons/shining-poster.png" alt="movie poster">
        </div>

        <div class="movie-info">
            <div class="movie-title">
                <h1>The Shining</h1>
            </div>
            <div class="overall-stars">
                <%- include("the-stars") %>
            </div>
            <div class="movie-additional">
                <p class="txt-subtle">The movie about shining</p>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="movie-overall">
        <div class="poster">
            <% if (moviedata.poster != null) { %>
                <img src=<%- moviedata.poster.file_location %> alt="movie poster">
            <% } %>
        </div>

        <div class="movie-info">
            <div class="movie-title">
                <h1><%- moviedata.original_title %></h1>
            </div>
            <div class="overall-stars">
                <%- include("the-stars") %>
            </div>
            <div class="movie-additional">
                <p class="txt-subtle"><%- moviedata.summary %></p>
            </div>
        </div>
    </div>
<% } %>

<style>
    .movie-overall {
        display: flex;
        height: 85.8lvh;
        align-items: center;
        align-self: stretch;

        background-color: var(--background-neutral-tertiary);
    }

    .movie-info {
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        align-self: stretch;

        text-align: center;
    }
    
    .poster {
        height: 100%;
    }

    .poster > img {
        height: 100%;
        width: auto;
    }

    .overall-stars > .the-stars > img {
        width: 4lvw;
    }

    .movie-title > h1 {
        font-size: 6lvw;
        font-weight: 700;
        line-height: 100%;

        margin-bottom: 2lvh;
    }

    .movie-additional {
        width: 80%;
        height: max-content;
    }

    .movie-additional > p {
        font-size: 1.75lvw;
        font-weight: 400;

        /* text-align: justify; */

        margin: 0;
        margin-top: 2.5lvh;
        line-height: 140%;
    }


</style>