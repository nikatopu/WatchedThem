<%- include("partials/header") %>

<div class="warning">
    <div class="info">
        <img src="/icons/warning icon.png" alt="warning icon">
        <div class="stack">
            <div class="content">
                <h1>ARE YOU SURE?</h1>
                <p>THIS WILL PERMANENTLY DELETE YOUR ACCOUNT!</p>
            </div>
            <button type="submit" 
            class="btn btn-fill btn-danger clickable"
            onclick='location.href="/delete-account-permanent"'>
                DELETE ACCOUNT
            </button>
        </div>
        <img class="clickable" src="/icons/decline.png" alt="close button" onclick='location.href="/user-settings"'>
    </div>
</div>

<style>
    .warning {    
        display: flex;
        width: 300px;
        padding: 1.25lvw;
        align-items: center;
        gap: 0.95lvw;

        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        border-radius: 0.5lvw;
        border: 1px solid var(--border-default);
    }

    .info {
        display: flex;
        flex-direction: row;
    }

    .info > img {
        width: 20px;
        height: 20px;
        margin-right: 5px;
    }

    .stack {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        flex: 1 0 0;
    }

    .stack > button {
        margin: 0;
    }

    .content > h1 {
        font-weight: 800;
    }


</style>