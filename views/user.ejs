<%- include('partials/header') %>

<% if (locals.data) { %>
<div class="user-head">
    <div class="avatar">
        <img src=<%- data.pfplink %> alt="user pfp">
    </div>
    <div class="text-group">
        <p>you're signed in as</p>
        <h1><%- data.displayname %></h1>
    </div>
    <div class="user-settings">
        <img class="clickable" src="/icons/icon-settings.png" alt="user pfp">
    </div>

</div>

<div class="section-movie-list">
    <div class="small-heading">
        <h1>Movies you've reviewed</h1>
    </div>

    <div class="movie-list">

        <!-- -->
        <div class="movie">
            <%- include('partials/the-stars') %>
            <div class="poster">
                <img src="/icons/shining-poster.png" alt="movie poster" class="clickable"/>
            </div>
        </div>

    </div>
    <%- include('partials/pagination') %>
</div>

<div class="user-review-grid">
    <div class="small-heading">
        <h1>Your Reviews</h1>
    </div>

    <div class="card-grid">
        <%- include('partials/user-review') %>
        <%- include('partials/user-review') %>
        <%- include('partials/user-review') %>


        
    </div>
    <%- include('partials/pagination') %>
</div>


<div class="user-review-grid gray-back">
    <div class="small-heading">
        <h1>Your Favourites</h1>
    </div>

    <div class="card-grid">
        <%- include('partials/user-review') %>
        <%- include('partials/user-review') %>
        <%- include('partials/user-review') %>


        
    </div>
    <%- include('partials/pagination') %>
</div>


<% } else { %>
    <div class="error">
        There was an error with getting your data, please try again.
    </div>
<% } %>

<%- include('partials/footer') %>
